<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan base-package="fooddemo"></context:component-scan>
 
	<bean id="myDemoFruit" class="fooddemo.Fruit"> 
		<property name="name" value="Strawberry"></property>
		<property name="nutritionalRating" value="12"></property>
	</bean>
 

	 
</beans>
